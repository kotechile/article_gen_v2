# Content Generator V2 - Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=true

# API Configuration
API_KEYS=your-api-key-1,your-api-key-2
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# LLM Configuration
LITELLM_API_URL=https://api.litellm.ai
LITELLM_API_KEY=your-litellm-key

# RAG Configuration
RAG_API_URL=https://your-rag-endpoint.com
RAG_API_KEY=your-rag-key

# Web Search Configuration
LINKUP_API_URL=https://api.linkup.so
LINKUP_API_KEY=your-linkup-key

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/content_generator

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance
MAX_PARALLEL_REQUESTS=10
RESEARCH_TASK_TIMEOUT=3000
RESEARCH_TASK_RETRY_COUNT=3

# Security
BCRYPT_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret
JWT_ACCESS_TOKEN_EXPIRES=3600
